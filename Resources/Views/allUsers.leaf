<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<title>Users</title>
	</head>
	<body>
		#extend("base"):
			#export("content"):
				<h1>All users</h1>

				#if(count(users) > 0):
					<table class="table table-bordered table-hover">
						<thead class="thead-light">
							<tr>
								<th>Username</th>
								<th>Name</th>
							</tr>
						</thead>

						<tbody>
							#for(user in users):
								<tr>
									<td><a href="/users/#(user.id)">#(user.username)</a></td>
									<td>#(user.name)</td>
								</tr>
							#endfor
						</tbody>
					</table>
				#else:
					<h2>Where did the users go?</h2>
				#endif
			#endexport
		#endextend
	</body>
</html>