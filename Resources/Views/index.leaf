<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>#(title) | Acronyms</title>
	</head>
	<body>
		#extend("base"):
			#export("content"):
				<h1>Acronyms</h1>
			    #if(acronyms):
				    <table class="table table-bordered table-hover">
				    	<thead class="thead-light">
				    		<tr>
				    			<th>Short</th>
				    			<th>Meaning</th>
				    		</tr>
				    	</thead>
				    	<tbody>
				    		#for(acronym in acronyms):
				    		<tr>
				    			<td><a href="/acronyms/#(acronym.id)">#(acronym.short)</a></td>
				    			<td>#(acronym.long)</td>
				    		</tr>
				    		#endfor
				    	</tbody>
				    </table>
			    #else:
			    	<h2>There are no acronyms</h2>
			    #endif
		    #endexport
		#endextend    
	</body>
</html>
